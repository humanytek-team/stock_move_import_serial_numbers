<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Inherit Form view -->
    <record id="view_stock_move_operations_import_serial_numbers" model="ir.ui.view">
      <field name="name">stock.move.operations.form.import_serial_numbers</field>
      <field name="model">stock.move</field>
      <field name="inherit_id" ref="stock.view_stock_move_operations"/>
      <field name="arch" type="xml">
        <field name="move_line_ids" position="after">
          <group string="Import Serial Numbers">
            <field name="serial_numbers_file" nolabel="1"/>
            <button name="action_load_serial_numbers" type="object" string="Import" class="oe_highlight"/>
          </group>
        </field>
      </field>
    </record>
  </data>
</odoo>